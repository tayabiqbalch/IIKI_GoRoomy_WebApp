@model dynamic
@using IIKI.BaseApp.Utils;
@using System.Reflection;
@{
    IEnumerable<PropertyInfo> props = IIKI.GoRoomy.WebApp.Utility.PropertyHelper.GetOrderedTableProperties(Model);

}

<thead>
    <tr>
        @foreach (var p in props)
        {
            @Html.Raw($"<th data-iikigridheader_property='{p.Name}'>")
            @Html.DisplayName(p.Name)
            @Html.Raw("</th>")
        }
        @Html.Raw("<th data-iikigridheader_actions='true' class='iiki-grid-actions-col'>")
        @Html.DisplayName("Actions")
        @Html.Raw("</th>")
    </tr>
</thead>
