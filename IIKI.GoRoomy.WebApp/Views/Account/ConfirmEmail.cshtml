@{
    ViewBag.Title = "Confirm Email";
}

<h2>@ViewBag.Title.</h2>
<div>
    <p>
        Thank you for confirming your email. Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
    </p>
</div>

<div class="row d-flex justify-content-center">
    <div class="col-md-4 ">
        <div class="content-v-center">
            <div class="text-center">
                <i class="fa fa-exclamation-circle text-warning" style="font-size:8rem;"></i>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="text-warning">Email Confirmed</h4>
                    <p class="text-warning">
                        Thank you for email confirmation
                        <div>
                            @Html.ActionLink("Login Now", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-success" })
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
