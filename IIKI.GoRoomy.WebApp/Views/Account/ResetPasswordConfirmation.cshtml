@{
    ViewBag.Title = "Reset password confirmation";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4 ">
        <div class="content-v-center">
            <div class="text-center">
                <i class="fa fa-exclamation text-success" style="font-size:8rem;"></i>
            </div>
            <div class="card">
                <div class="card-body">
                    <h4 class="text-success">Reset password confirmation</h4>
                    <p class="text-success">
                        Your password has been reset.
                        <div>
                            @Html.ActionLink("Login Now", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn btn-success" })
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

