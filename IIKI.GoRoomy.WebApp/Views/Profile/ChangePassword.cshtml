
@{
    ViewBag.Title = "Change Password";
}

<div id="accordion">
    <div class="card icard card-bordered">
        <div class="card-header" >
                <a class="collapse-icon" data-bs-toggle="collapse" data-bs-target="#passwordChange" aria-expanded="true"></a>
                <span>Change Password</span>
        </div>

        <div id="passwordChange" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
            @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post, new { role = "form", @id = "ChangePasswordForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="card-body">
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.Label("PasswordHash", "Old Password", htmlAttributes: new { @class = "control-label required-field" })
                            @Html.Editor("PasswordHash", new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @type = "Password", @required = "required" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.Label("NewPasswordHash", "New Password", htmlAttributes: new { @class = "control-label required-field" })
                            @Html.Editor("NewPasswordHash", new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @type = "Password", @required = "required" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            @Html.Label("ConfirmPasswordHash", "Confirm Password", htmlAttributes: new { @class = "control-label required-field" })
                            @Html.Editor("ConfirmPasswordHash", new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @type = "Password", @required = "required" } })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <div class="mt-2 text-right">
                                <button class="btn btn-sm btn-dark m-t-n-xs" type="submit"><strong>Update Password</strong></button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>